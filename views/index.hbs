<section class="ui raised very padded text container segment">
    <h3 class="ui header">Insert Data</h3>
    <form class="ui form " action="/insert" method="post">
        <div class="field">
            <div class="two fields">
                <div class="field">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title">
                </div>
            </div>
            <div class="two fields">
                <div class="field">
                    <label for="content">Content</label>
                    <input type="text" id="content" name="content">
                </div>
            </div>
            <div class="two fields">
                <div class="field">
                    <label for="author">Author</label>
                    <input type="text" id="author" name="author">
                </div>
            </div>
            <button type="submit">INSERT</button>
        </div>
    </form>
</section>


<section class="ui raised very padded text container segment">
    <h3 class="ui header">Get Data</h3>
    <button><a href="/get-data">LOAD DATA</a></button>
    <div class="two fields">
        <div class="field">
            {{# each items }}
            <article class="item">
                <br>
                <ul class="ui list">
                    <h3 class="ui header">Title: {{ this.title }}</h3>
                    <li>Content: {{ this.content }}</li>
                    <li>Author: {{ this.author }}</li>
                    <li>ID: {{ this._id }}</li>
                    <br>
                    <hr>
                </ul>

            </article>
            {{/each}}
        </div>
    </div>
</section>



<section class="ui raised very padded text container segment">
    <h3 class="ui header">Update Data</h3>
    <form action="/update" method="post" class="ui form">
        <div class="two fields">
            <div class="field">
                <label for="id">ID</label>
                <input type="text" id="id" name="id">
            </div>
        </div>
        <div class="two fields">
            <div class="field">
                <label for="title">Title</label>
                <input type="text" id="title" name="title">
            </div>
        </div>
        <div class="two fields">
            <div class="field">
                <label for="content">Content</label>
                <input type="text" id="content" name="content">
                <div class="two fields">
                    <div class="field">
                        <div class="input">
                            <label for="author">Author</label>
                            <input type="text" id="author" name="author">
                        </div>
                    </div>
                    <button type="submit">UPDATE</button>
    </form>
</section>



<section class="ui raised very padded text container segment">
    <h3 class="ui header">Delete Data</h3>
    <form action="/delete" method="post" class="ui form">
        <div class="two fields">
            <div class="field">
                <label for="id">ID</label>
                <input type="text" id="id" name="id">
            </div>
        </div>
        <button type="submit">DELETE</button>
    </form>
</section>